<!--index.wxml-->
<!-- header -->
<view class="header">
  <input type="text" name="searchText" id="searchText" class="header-input" placeholder="AngularJS·MySQL·Java" placeholder-class="header-input-placeholder" bindinput="handleInputChange" />
  <icon type="search" class="header-icon-search" size="18" wx:if="{{showIcon}}"></icon>
</view>
<!-- navigator -->
<view class="navigator">
  <view class="navigator-item navigator-item-active">
    <navigator class="item-link" hover-class="none" url="">
      <image class="item-img" src="../../resources/recommend@2x.png"></image>
      <text class="item-text">推荐</text>
    </navigator>
  </view>
  <view class="navigator-item">
    <navigator class="item-link" hover-class="none" url="">
      <image class="item-img" src="../../resources/project@2x.png"></image>
      <text class="item-text">实战</text>
    </navigator>
  </view>
  <view class="navigator-item">
    <navigator class="item-link" hover-class="none" url="">
      <image class="item-img" src="../../resources/path@2x.png"></image>
      <text class="item-text">路径</text>
    </navigator>
  </view>
  <view class="navigator-item">
    <navigator class="item-link" hover-class="none" url="">
      <image class="item-img" src="../../resources/course@2x.png"></image>
      <text class="item-text">活动</text>
    </navigator>
  </view>
</view>
<!-- swiper -->
<swiper previous-margin="18" next-margin="18" circular="{{true}}">
  <swiper-item class="swiper-item" wx:for="{{swiperList}}" wx:key="*this">
    <image class="swiper-img" src="{{item.imgUrl}}"></image>
  </swiper-item>
</swiper>