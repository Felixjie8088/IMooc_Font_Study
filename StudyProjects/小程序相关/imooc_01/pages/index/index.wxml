<!--index.wxml-->
<!-- header -->
<view class="header">
  <input type="text" name="searchText" id="searchText" class="header-input" placeholder="AngularJS·MySQL·Java" placeholder-class="header-input-placeholder" bindinput="handleInputChange" />
  <icon type="search" class="header-icon-search" size="18" wx:if="{{showIcon}}"></icon>
</view>
<!-- navigator -->
<view class="navigator">
  <view class="navigator-item navigator-item-active">
    <navigator class="item-link" hover-class="none" url="">
      <image class="item-img" src="../../resources/recommend@2x.png"></image>
      <text class="item-text">推荐</text>
    </navigator>
  </view>
  <view class="navigator-item">
    <navigator class="item-link" hover-class="none" url="">
      <image class="item-img" src="../../resources/project@2x.png"></image>
      <text class="item-text">实战</text>
    </navigator>
  </view>
  <view class="navigator-item">
    <navigator class="item-link" hover-class="none" url="">
      <image class="item-img" src="../../resources/path@2x.png"></image>
      <text class="item-text">路径</text>
    </navigator>
  </view>
  <view class="navigator-item">
    <navigator class="item-link" hover-class="none" url="">
      <image class="item-img" src="../../resources/course@2x.png"></image>
      <text class="item-text">活动</text>
    </navigator>
  </view>
</view>
<!-- swiper -->
<swiper class="swiper-layout" previous-margin="18rpx" next-margin="18rpx" circular="{{true}}">
  <swiper-item class="swiper-item" wx:for="{{swiperList}}" wx:key="*this">
    <image class="swiper-img" src="{{item.imgUrl}}"></image>
  </swiper-item>
</swiper>
<!-- project -->
<view class="project-layout">
  <view class="project-title">实战推荐</view>
  <view class="project-list">
    <view class="project-item" wx:for="{{courses}}" wx:key="*this">
      <image class="project-item-pic" src="{{item.imgUrl}}"></image>
      <view class="project-item-content">
        <view class="project-item-title">{{item.title}}</view>
        <view class="project-item-tags">
          <view class="project-item-price-active" wx:if="{{item.promotion}}">¥{{item.price}}</view>
          <view class="project-item-price" wx:else>¥{{item.price}}</view>
          <view class="project-item-notice" wx:if="{{item.notice}}">{{item.notice}}</view>
          <view class="project-item-level">{{item.level}}</view>
          <view class="project-item-user">
            <image class="project-item-icon" src="../../resources/user.png"></image>
            {{item.sales}}
          </view>
        </view>
      </view>
    </view>
  </view>
</view>