/* pages/sendExpress/sendExpress.wxss */
.header-layout {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 156rpx;
  background-color: #ffffff;
  padding: 0 58rpx 0 50rpx;
}

.item-p-headPortrait {
  width: 92rpx;
  height: 92rpx;
}

.item-p-info {
  display: flex;
  flex-direction: column;
  flex: 1;
  flex-wrap: wrap;
  margin: 0 50rpx 0 34rpx;
}

.info-up {
  margin-bottom: 12rpx;
}

.item-info-name,
.item-info-phone,
.item-info-way,
.item-info-address {
  display: inline-flex;
}

.item-info-name {
  margin-right: 64rpx;
  color: #626161;
}

.item-info-phone {
  color: #626161;
}

.item-info-way {
  margin-right: 20rpx;
  color: #999999;
}

.item-info-address {
  color: #999999;
}

.item-p-btn {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.item-p-btn-icon {
  width: 16rpx;
  height: 30rpx;
}

/* content */
.content-layout {
  margin-bottom: 40rpx;
}

.item-info {
  width: 100%;
  height: 108rpx;
  margin-top: 20rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
}

.item-icon {
  width: 12rpx;
  height: 12rpx;
  background: #35BD00;
  border-radius: 50%;
  margin: 0 74rpx 0 90rpx;
}

.item-text {
  flex: 1;
  font-size: 14px;
  color: #626161;
}

.item-img {
  width: 28rpx;
  height: 32rpx;
  margin-right: 54rpx;
}

/* next-step */
.btn-next-step {
  background: #35BD00;
  text-align: center;
  vertical-align: middle;
  margin: auto 40rpx;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 14px;
  color: #FFFFFF;
  border-radius: 50rpx;
}

/* footer */
.footer-layout {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 0 20rpx;
}

.footer-item {
  font-size: 12px;
  color: #999999;
}

.f-item-img{
  width: 20rpx;
  height: 26rpx;
  margin-right: 17rpx;
}